                <td>{{ e.getCategory.getNomCat()}} </td>
                <td>
                    <a href="{{ path('ActivityUpdate',{"id":e.getId}) }}"> Edit </a>
                    <a href="{{ path('ActivityDelete',{"id":e.getId}) }}">Delete</a>

                </td>

            </tr>
        {% endfor %}
